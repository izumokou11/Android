<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="25x32"
            android:textSize="20dp"
            android:textColor="#47DD07"
            android:gravity="right"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="800"
            android:textSize="30dp"
            android:textColor="#47DD07"
            android:gravity="right"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:layout_weight="0"
            android:weightSum="0"
            android:orientation="horizontal">
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="%"
                android:layout_weight="1"
                />
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="/"
                android:layout_weight="1"/>
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="x"
                android:layout_weight="1"/>
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="X"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:layout_weight="0"
            android:weightSum="0"
            android:orientation="horizontal">
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="7"
                android:layout_weight="1"/>
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="8"
                android:layout_weight="1"/>
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="9"
                android:layout_weight="1"/>
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:layout_weight="0"
            android:weightSum="0"
            android:orientation="horizontal">
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="4"
                android:layout_weight="1"/>
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="5"
                android:layout_weight="1"/>
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="6"
                android:layout_weight="1"/>
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0"
            android:layout_margin="25dp"
            android:weightSum="0">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="1"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="2"
                        android:layout_weight="1"/>
                </LinearLayout>
                <Button
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:text="0"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0">
                    <Button
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="3"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="."
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1">
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:text="="
                        android:layout_weight="1" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>